{
    "rules": {
        "indent": [ 
            2,
            2,
            {"SwitchCase": 1}
        ],
        "quotes": [
            0,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            0,
            "always"
        ],
        "no-unused-vars": [
            2,
            {"args": "none"}
        ],
        "no-console": 0
    },
    "globals": "__dirname",
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "commonjs": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true,
            "modules": true
        }
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": [
        "react"
    ]
}